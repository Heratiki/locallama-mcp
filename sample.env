# Server Configuration
PORT=3000                     # Port number for the server to listen on
HOST=0.0.0.0                 # Host to bind the server to
API_PREFIX=/api              # Prefix for all API routes

# Local LLM Endpoints
LM_STUDIO_ENDPOINT=http://localhost:1234/v1     # LM Studio API endpoint
OLLAMA_ENDPOINT=http://localhost:11434/api      # Ollama API endpoint

# Model Configuration
DEFAULT_LOCAL_MODEL=llama2    # Default model to use for local inference
MODEL_TEMPERATURE=0.7         # Temperature for model generation (0-2)
MODEL_MAX_TOKENS=2048         # Maximum tokens for model responses
MODEL_TOP_P=0.95             # Top-p sampling parameter (0-1)
MODEL_FREQUENCY_PENALTY=0     # Frequency penalty for generation (-2 to 2)
MODEL_PRESENCE_PENALTY=0      # Presence penalty for generation (-2 to 2)

# Decision Thresholds
TOKEN_THRESHOLD=1000          # Maximum tokens before task splitting
COST_THRESHOLD=0.02          # Maximum cost per request
QUALITY_THRESHOLD=0.7        # Minimum quality score for acceptance

# API Keys
OPENROUTER_API_KEY=          # OpenRouter API key (optional)

# Benchmark Configuration
BENCHMARK_RUNS_PER_TASK=3    # Number of runs per benchmark task
BENCHMARK_PARALLEL=false      # Run benchmarks in parallel
BENCHMARK_MAX_PARALLEL_TASKS=2 # Maximum parallel benchmark tasks
BENCHMARK_TASK_TIMEOUT=60000  # Timeout for benchmark tasks (ms)
BENCHMARK_SAVE_RESULTS=true   # Save benchmark results to disk
BENCHMARK_RESULTS_PATH=./benchmark-results # Path to save benchmark results

# Logging Configuration
LOG_LEVEL=info               # Log level (error, warn, info, debug, trace)
LOG_FILE=                    # Log file path (optional, logs to console if not set)

# Code Search Configuration
CODE_SEARCH_ENABLED=true          # Enable semantic code search functionality
CODE_SEARCH_EXCLUDE_PATTERNS=["node_modules/**","dist/**",".git/**"] # Exclude patterns (JSON array)
CODE_SEARCH_INDEX_ON_START=true   # Index code files on server start
CODE_SEARCH_REINDEX_INTERVAL=3600 # Reindex interval in seconds (0 to disable)

# Cache Settings
CACHE_ENABLED=true           # Enable response caching
CACHE_DIR=./.cache          # Directory to store cache files
MAX_CACHE_SIZE=1073741824   # Maximum cache size in bytes (default: 1GB)